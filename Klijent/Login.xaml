<Window x:Class="Klijent.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="205"
        Width="295"
        WindowStartupLocation="CenterScreen"
        Background="#101011"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#101011"/>
        <SolidColorBrush x:Key="CardBackground" Color="#151616"/>
        <SolidColorBrush x:Key="InputBackground" Color="#101111"/>
        <SolidColorBrush x:Key="InputBorder" Color="#3b3e3d"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#3b3e3d"/>
        <SolidColorBrush x:Key="TextOnDark" Color="#f0f6f0"/>
        <SolidColorBrush x:Key="TextMuted" Color="#8a8f8a"/>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextOnDark}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="4,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4a4d4d"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2b2d2e"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#252626"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextOnDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="{StaticResource InputBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource TextOnDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource PrimaryBackground}">
        <Border HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="{StaticResource CardBackground}"
                CornerRadius="10"
                Padding="16"
                Width="250" Margin="20,0,0,0">
            <StackPanel>

                <TextBlock Text="Login"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextOnDark}"
                           Margin="0,0,0,12"
                           HorizontalAlignment="Center"/>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="korisničko ime:"
                               Grid.Row="0"
                               Grid.Column="0"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextOnDark}"/>

                    <TextBox x:Name="txt_korisnicko_ime"
                             Grid.Row="0"
                             Grid.Column="1"
                             Height="24"
                             Text="domagoj"/>

                    <TextBlock Text="lozinka:"
                               Grid.Row="2"
                               Grid.Column="0"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextOnDark}"/>

                    <PasswordBox x:Name="txt_lozinka"
                                 Grid.Row="2"
                                 Grid.Column="1"
                                 Height="24"
                                 Password="domagoj"/>
                </Grid>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,4,0,0">
                    <Button x:Name="LoginButton"
                            Content="uloguj se"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0,0,8,0"
                            Click="Login_Click"/>
                    <Button Content="registruj se"
                            Style="{StaticResource SecondaryButton}"
                            Click="Register_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
